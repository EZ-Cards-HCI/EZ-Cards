<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1a1a1a"
    android:clickable="false">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#1a1a1a">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:background="@android:drawable/ic_menu_gallery"
                android:layout_marginLeft="30dp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:id="@+id/FirstNameView"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/FirstName"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:id="@+id/LastNameView"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/LastName"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/title"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/titlefield"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Company"
                android:id="@+id/CompanyView"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/Company1"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:id="@+id/comapnyView2"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/Company2"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/Phone"
            android:layout_above="@+id/LastName"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/FirstName"
            android:layout_alignTop="@+id/FirstName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Main"
                android:id="@+id/Main"
                android:layout_above="@+id/LastName"
                android:textSize="15dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.14" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"

                android:ems="10"
                android:id="@+id/PhoneMain"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Cell"
                android:id="@+id/CellTV"
                android:layout_above="@+id/LastName"
                android:textSize="15dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/PhoneCell"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Fax"
                android:id="@+id/FaxTV"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/Fax"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/EmailTv"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/address"
                android:layout_above="@+id/LastName"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/FirstName"
                android:layout_alignTop="@+id/FirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/addressT"

                android:layout_below="@+id/imgPreview"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.43" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:weightSum="1">




            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnSave"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btnDiscard"
                android:layout_below="@+id/addressT"
                android:layout_marginLeft="80dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:id="@+id/btnDiscard"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/addressT"
                android:layout_alignRight="@+id/addressT"
                android:layout_marginLeft="15dp" />

        </LinearLayout>




    </LinearLayout>

</ScrollView>
