<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loyola.ezcards.ezcardsapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.WithActionBar" >
        <activity
            android:name="com.loyola.ezcards.ezcardsapp.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name="com.loyola.ezcards.ezcardsapp.OCRServiceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:logo="@drawable/ic_launcher"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.ORC"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".MyCardsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:logo="@drawable/ic_launcher"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.Mycards"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".SelectCardsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:logo="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.SELECT"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:logo="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.PROF"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".DeleteContactActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:logo="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.DELACT"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateContactActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:logo="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.loyola.ezcards.ezcardsapp.UPDATE"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="true" />

</manifest>
